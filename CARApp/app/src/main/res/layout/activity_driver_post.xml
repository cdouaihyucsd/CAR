<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverPostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="88dp">


        <AutoCompleteTextView
            android:id="@+id/post_start_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter starting point"
            android:textSize="24sp" />

        <AutoCompleteTextView
            android:id="@+id/post_destination_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter destination"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:textSize="24sp"
            android:hint="Select departure date"/>

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:hint="Select departure time"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/note_to_riders"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:hint="Leave your riders a note"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/confirm_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="POST RIDE" />

        <Button
            android:id="@+id/post_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CANCEL" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>